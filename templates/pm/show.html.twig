{% extends 'base.html.twig' %}

{% block title %}Lire un message privé{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ pm.title }}</h5>
                <div class="d-flex border-top border-bottom pt-2 pb-2 align-items-center">
                    <label class="mr-1 h6 mb-0 font-weight-light">De</label> <h6 class="card-subtitle m-0">{{ pm.userfrom }}</h6>
                </div>
                <div class="d-flex border-bottom pt-2 pb-2 align-items-center">
                    <label class="mr-1 h6 mb-0 font-weight-light">Le</label> <h6 class="card-subtitle m-0">{{ pm.date|date("d-m-y") }}</h6>
                </div>
                <p class="card-text mt-2">
                    {{ pm.content }}
                </p>
            </div>
            <div class="card-footer">
                <a href="" class="btn btn-success">
                    <i class="fa fa-check"></i>
                    Répondre
                </a>
                {{ include('pm/_delete_form.html.twig') }}
            </div>
        </div>
        <a href="{{ path('pm_index') }}" class="badge badge-primary">Retour</a>
    </div>


{% endblock %}
