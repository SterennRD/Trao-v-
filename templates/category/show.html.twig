{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container">
    <h1>{{ category.label }}</h1>
        <ul>
            {% for item in items %}
                <li><a href="{{ path('item_show', {'id' : item.id}) }}">{{ item.name }}</a></li>
            {% endfor %}
        </ul>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ category.label }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ category.icon }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ category.color }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
